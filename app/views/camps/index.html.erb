<%= render "shared/header" %>
<div class="camp-back"></div>
  <div class='item-contents'>
    <%= link_to 'キャンプ 投稿一覧', "#", class: "subtitle" %>
    <ul class='item-lists'>

    <% @camps.each do |camp| %>
      <li class='list'>
        <%= link_to camp_path(camp.id) do %>
        <div class='item-img-content'>
          <%= image_tag camp.image, class: "item-img" %>
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= camp.title %>
          </h3>
          <div class='item-price'>
            <span><%= camp.category %></span>
          </div>
        </div>
        <% end %>
      </li>
    <% end %>
    </ul>
  </div>