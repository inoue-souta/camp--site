<div class="body"></div>
		<div class="grad"></div>
		<div class="header">
			<div>Camp<span>Site</span></div>
		</div>
		<br>
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
		<div class="login">
        <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"名前を入力", maxlength:"40" %>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"emailを入力", autofocus: true %>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワードを入力" %>
        <%= f.submit "新規登録" ,class:"register-red-btn" %>
		</div>
    <% end %>