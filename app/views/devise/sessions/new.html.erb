    <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
		<div class="login-form">
				<%= f.email_field :email, class:"input-default", id:"email", placeholder:"emailを入力", autofocus: true %>
				<%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワードを入力" %>
				<%= f.submit "ログイン" ,class:"register-red-btn" %>
		</div>
    <% end %>